<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="locale_support.locale_listener" class="DigitalAscetic\SimpleTranslatable\EventListener\LocaleListener">
            <argument type="string" id="kernel.default_locale"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="locale_support.entity_route_listener" class="DigitalAscetic\SimpleTranslatable\EventListener\EntityRouteListener">
            <argument type="service" id="service_container"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="locale_support.translatable_listener" class="DigitalAscetic\\SimpleTranslatable\EventListener\TranslatableListener">
            <tag name="doctrine.event_subscriber"/>
        </service>

        <service id="locale_support.i18nRoute" class="DigitalAscetic\SimpleTranslatable\Twig\Extension\I18nRoute"
                 public="false">
            <tag name="twig.extension"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

    </services>

</container>